{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Fibenv QA file (remote)",    // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "python3",
        //"communication": "pipe"
      },
      "args": [
        "${workspaceFolder}/.vscode/emufiles/__init__.py",
        "-f",
        "${file}"
      ],
      "scriptRoots": ["${workspaceFolder}"], // Required for debugger to find scripts
      "scriptFiles": ["*.lua", "**/*.lua"],
      "stepUnmappedLines": false,
      //"ignorePatterns": ["^emufiles","lldebugger"] // Add to skip the emufiles and focus on QA
      "ignorePatterns": ["lldebugger"]
    },
    {
      "name": "Fibenv QA file (local)",    // For debugging QA lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "command": "python3",
        //"communication": "pipe"
      },
      "args": [
        "${workspaceFolder}/.vscode/emufiles/__init__.py",
        "-l",
        //"-i","dev/init.lua"
        "-f",
        "${file}"
      ],
      "scriptRoots": ["${workspaceFolder}"], // Required for debugger to find scripts
      "scriptFiles": ["*.lua", "**/*.lua"],
      "stepUnmappedLines": false,
      //"ignorePatterns": ["^emufiles","lldebugger"] // Add to skip the emufiles and focus on QA
      "ignorePatterns": ["lldebugger"]
    },
    {
      "name": "Python: __init__.py (remote)", // For debugging the python wrapper
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/emufiles/__init__.py",
      "args": [
        "-f",
        "${workspaceFolder}/qa1.lua"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
        "env": {
          //  "GEVENT_SUPPORT": "True"
        }
    },
    {
      "name": "Python: __init__.py (local)", // For debugging the python wrapper
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/.vscode/emufiles/__init__.py",
      "args": [
        "-l",
        "-f",
        "${workspaceFolder}/qa0.lua"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
        "env": {
          //  "GEVENT_SUPPORT": "True"
        }
    },
    {
      "name": "Debug Lua file", // For debugging the lua file
      "type": "lua-local",
      "request": "launch",
      "program": {
        "lua": "lua",
        "file": "${file}"
      },
      "breakInCoroutines": true,
      "ignorePatterns": ["^copas"]
    }
  ]
}
